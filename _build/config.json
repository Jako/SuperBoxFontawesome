{
  "name": "SuperBoxFontawesome",
  "lowCaseName": "superboxfontawesome",
  "description": "Select FontAwesome Icons in SuperBoxSelect custom template variable",
  "author": "Thomas Jakobi",
  "version": "2.0.0",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "SuperBoxFontawesome",
          "file": "superboxfontawesome.plugin.php",
          "description": "SuperBoxFontawesome plugin",
          "events": [
            "OnSuperboxselectTypeOptions"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "fontawesomeUrl",
        "area": "system",
        "value": "https://raw.githubusercontent.com/FortAwesome/Font-Awesome/fa-4/scss/_icons.scss"
      },
      {
        "key": "fontawesomePrefix",
        "area": "system",
        "value": "fa-"
      },
      {
        "key": "excludeClasses",
        "area": "system",
        "value": "ul,li"
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.treehillstudio.php"
      ]
    }
  }
}
